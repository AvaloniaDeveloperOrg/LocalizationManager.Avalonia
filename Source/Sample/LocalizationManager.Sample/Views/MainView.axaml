<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:LocalizationManager.Sample.ViewModels"
             xmlns:manager="using:LocalizationManager"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LocalizationManager.Sample.Views.MainView"
             Foreground="White"
             Background="#171C2C">
	<Design.DataContext>
		<viewModels:MainViewModel />
	</Design.DataContext>
	<StackPanel>
		<TextBlock Text="{LocalizedXamlString HelloWorld}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<TextBlock Text="{LocalizedBinding {Binding HelloWorld}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="PART_Button" Content="Click" />
	</StackPanel>
</UserControl>
